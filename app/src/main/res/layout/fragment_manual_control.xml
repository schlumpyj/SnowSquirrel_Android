<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joshua.snowsquirrel.ManualControl">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.joshua.snowsquirrel.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <io.github.controlwear.virtual.joystick.android.JoystickView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joystick"
            custom:JV_buttonColor="#EFE9F4"
            custom:JV_buttonSizeRatio="15%"
            custom:JV_borderColor="#5863F8"
            custom:JV_backgroundColor="#5BC0EB"
            custom:JV_borderWidth="4dp"
            custom:JV_fixedCenter="false"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/enable_manual_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="Enable"
            android:textSize="24sp" />

    </LinearLayout>

</FrameLayout>
